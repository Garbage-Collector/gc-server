{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["src/main/**/*.ts", "src/test/**/*.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "multiline"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "useImportType": "off",
        "useNodejsImportProtocol": "error",
        "useShorthandFunctionType": "off"
      },
      "suspicious": {
        "noConsoleLog": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "multiline",
      "bracketSameLine": false,
      "semicolons": "always",
      "trailingComma": "all",
      "quoteStyle": "double",
      "quoteProperties": "preserve"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
